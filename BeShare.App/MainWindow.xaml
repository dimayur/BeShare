<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeShare.App"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" x:Class="BeShare.App.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="352" Width="306"
        AllowDrop="True" Drop="MainWindow_Drop">

    <Grid Height="324" VerticalAlignment="Top" Margin="0,10,0,0">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Оберіть файли:"/>
            <ListBox x:Name="fileListBox" SelectionMode="Multiple" Width="300" Height="150"/>
            <Button Content="Архівувати" Click="CreateArchive_Click" Height="74"/>
        </StackPanel>
        <ui:Button Content="Button" HorizontalAlignment="Center" Margin="0,17,0,0" VerticalAlignment="Top" Click="Button_Click"/>
    </Grid>
</Window>
