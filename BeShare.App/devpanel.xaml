<Window x:Class="BeShare.App.devpanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeShare.App"
        mc:Ignorable="d"
        Title="devpanel" Height="350" Width="350" WindowStyle="None">
    <Grid>
        <Grid>
            <Image x:Name="gifImage" Stretch="None"/>
            <TextBlock x:Name="loadingText" Text="Загрузка..." FontSize="16" FontWeight="Bold" Foreground="Black"
                   HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"
                   TextAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
